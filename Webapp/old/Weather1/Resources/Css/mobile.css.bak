html {
	overflow: hidden;
	height:100%;
}
body {
	width: 100%;
	height: 100%;
	margin: 0;
    padding: 0;
	font-family: Arial,Tahoma,微软雅黑;
	font-size: 12px;
	overflow: hidden;
}

::-webkit-scrollbar {
    -webkit-appearance: none;
    width: 4px;
    background-color: #fff;
	display:none;
}

::-webkit-scrollbar-thumb {
    border-radius: 3px;
	-moz-border-radius:3px;
	-webkit-border-radius:3px;
    border: 1px solid rgba(255, 255, 255, 0);
    background-clip: content-box;
    background-color: #ccc;
}

::-webkit-scrollbar-corner {
    background-color:#bbb;
}

.main{
	position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
}

.main .page{
	position: absolute;
    top: 0;
    left: 0;
    height: 300%;
    right: 0;
	color:#333;
    overflow: hidden;
}

.tab_now{
	position: absolute;
    top: 0;
    left: 0;
    height: 33.33333%;
    right: 0;
    background: #f7f7fa;
    overflow: hidden;
}


.tab_now .notice{
	position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 160px;
    background: #00cccc;
    overflow: hidden;
}

.tab_now .notice.q50{
	background: #0099ff;
}

.tab_now .notice.q100{
	background: #009999;
}

.tab_now .notice.q150{
	background: #ff9900;
}

.tab_now .notice.q200{
	background: #cc9900;
}

.tab_now .notice.q300{
	background: #808080;
}

.tab_now .notice.q500{
	background: #000000;
}

.tab_now .notice .back{
	position: absolute;
    top: 4px;
    left: 8px;
	color:#fff;
}

.tab_now .notice .head{
	position: absolute;
    top: 0;
    left: 28px;
    right: 0;
    height: 20px;
    padding: 8px;
    overflow: hidden;
	color:#fafafa;
    font-size: 10.5pt;
    line-height: 20px;
}

.tab_now .notice .head .pm25{
	float: right;
    border: 1px solid #fafafa;
    padding: 0px 5px;
    border-radius: 5px;
    font-size: 9pt;
}

.tab_now .notice .title{
	position: absolute;
    top:50%;
    left:50%;
    width:300px;
    height:140px;
    margin: -50px 0 0 -150px;
    overflow: hidden;
    text-align: center;
	color:#fff;
    font-size: 48pt;
    line-height: 70px;
}

.tab_now .title i{
	position: absolute;
    top: 0;
    right: 60px;
    margin-top: -25px;
    font-size: 18pt;
}

.tab_now .lt{
	position: absolute;
    bottom: 0;
    left: 0;
    width: 50%;
	padding: 20px 0;
    height: 120px;
    overflow: hidden;
    text-align: center;
	color:#607d8b;
    font-size: 14pt;
}

.tab_now .lt i{
    font-size: 64pt;
    line-height: 0px;
}

.tab_now .rt{
	position: absolute;
    bottom: 0;
    left: 50%;
    width: 50%;
	padding: 30px 0;
    height: 95px;
    overflow: hidden;
    text-align: center;
	color:#607d8b;
    font-size: 14pt;
	line-height: 30px;
}

.tab_today{
	position: absolute;
    top: 33.33333%;
    left: 0;
    height: 33.33333%;
    right: 0;
    background: #f7f7fa;
    overflow: hidden;
}

.tab_today .row{
	position: relative;
    width: 100%;
    height: 33.33333%;
}

.tab_today .row .lt{
	position: absolute;
    top: 0;
    left: 0;
    width: 50%;
    height: 50%;
	padding:10% 0;
    overflow: hidden;
    text-align: center;
    font-size: 14pt;
}
.tab_today .row .rt{
	position: absolute;
    top: 0;
    left: 50%;
    width: 50%;
    height: 50%;
	padding:10% 0;
    overflow: hidden;
    text-align: center;
    font-size: 14pt;
}

.tab_today .row i{
	font-size: 32pt;
}

.tab_today hr{
	border: 0;
    border-bottom: 1px dotted #ccc;
    width: 90%;
	margin: 0 auto;
}


.tab_future{
	position: absolute;
    top: 66.66666%;
    left: 0;
    height: 33.33333%;
    right: 0;
    background: #f7f7fa;
    overflow: hidden;
}

.tab_future hr{
	border: 0;
    border-bottom: 1px dotted #ccc;
    width: 90%;
	margin: 0 auto;
}

.tab_future .item{
	position: relative;
    width: 100%;
    height: 50%;
}

.tab_future .item i{
	font-size: 48pt;
	color: #e7505a;
}

.tab_future .item .lt{
	position: absolute;
    top: 0;
    left: 0;
    width: 40%;
    height: 70%;
    overflow: hidden;
    text-align: center;
    font-size: 12pt;
    line-height: 60px;
    padding: 15% 0;
}

.tab_future .item .rt{
	position: absolute;
    top: 0;
    left: 40%;
    width: 60%;
    height: 70%;
	padding:15% 0;
    overflow: hidden;
    font-size: 12pt;
	line-height:30px;
	color: #333;
}